# Root Environment Variables (Copy to `.env` and fill in real values)

# Grid Configuration
GRID_API_KEY=your_grid_sandbox_api_key
GRID_ENVIRONMENT=sandbox

# Solana RPC Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Switchboard RateAgent Configuration
SWITCHBOARD_FEED_ID=883ea8295f70ae506e894679d124196bb07064ea530cefd835b58c33a5ab6549
SWITCHBOARD_FEED_ID_USDT=8327414619366bc88545bf72da9fb072d1c324fcd94deeea0bd189c8229e5bc9
SWITCHBOARD_QUEUE=   # Optional: Custom queue public key; leave empty to use default queue
SWITCHBOARD_CROSSBAR_URL= # Optional: Crossbar service URL; leave empty for local development
USD_FALLBACK_RATE=1.0000  # Optional: Manual fallback rate when data source unavailable, requires manual confirmation

# RateAgent x402 Micro-payment Configuration
RATE_AGENT_PRIVATE_KEY=base58_private_key_for_rate_agent_wallet  # Agent payment wallet private key (Base58 format)
RATE_AGENT_PAYMENT_AMOUNT=1000  # Agent payment amount per transaction (atomic units, default 1000 = 0.001 USDC)

# Facilitator Local Wallet (holds private key, compatible with legacy mock)
FACILITATOR_PRIVATE_KEY=base58_private_key_from_solana_keygen
FACILITATOR_PUBLIC_KEY=base58_public_key_from_solana_keygen

# Kora Facilitator Integration
KORA_RPC_URL=http://localhost:8080
KORA_PRIVATE_KEY=base58_or_json_fee_payer_private_key
KORA_SIGNER_TYPE=memory
KORA_SIGNER_ADDRESS=fee_payer_public_key
PAYER_ADDRESS=fee_payer_public_key
KORA_API_KEY=   # Required if API Key authentication enabled in kora.toml
KORA_HMAC_SECRET= # Required if HMAC authentication enabled

# Grid Solana Receiving Address (Merchant Main Account)
MERCHANT_SOLANA_ADDRESS=grid_merchant_solana_address
MERCHANT_GRID_ACCOUNT_ID=grid_merchant_account_id

# Grid Commission Account Configuration
COMMISSION_SOLANA_ADDRESS=grid_commission_solana_address
COMMISSION_GRID_ACCOUNT_ID=grid_commission_account_id
COMMISSION_BPS=500  # Commission rate, 500 BPS = 5%
GRID_USER_ID=grid_user_id
GRID_SIGNER_ADDRESS=grid_signer_address
GRID_SIGNER_PRIVATE_KEY=base58_private_key_for_grid_signer

# Optional: Grid Facilitator Account Address (if exists)
FACILITATOR_GRID_ADDRESS=grid_facilitator_solana_address

# Frontend / SDK Related
CORBITS_API_KEY=
NEXT_PUBLIC_FACILITATOR_URL=http://localhost:3001
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_NETWORK=solana-devnet
NEXT_PUBLIC_RECEIVER_ADDRESS=merchant_wallet_address_for_x402
NEXT_PUBLIC_CDP_CLIENT_KEY=cdp_client_key_or_placeholder

# Network Request Default Parameters
REQUEST_TIMEOUT_MS=30000

